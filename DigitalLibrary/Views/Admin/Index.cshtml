@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout"; // Use your shared layout if you have one
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<style>
    body {
        background-color: #f8fafc;
    }

    .dashboard-header {
        padding: 1rem;
        background-color: #0d6efd;
        color: white;
    }

    .dashboard-card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border-radius: 0.5rem;
        padding: 1rem;
        background-color: white;
    }

    .sidebar {
        background-color: #f1f5f9;
        padding: 1rem;
        height: 100vh;
    }

    .nav-link {
        color: #0d6efd;
        margin-bottom: 0.5rem;
        font-weight: 500;
    }

    @@media (max-width: 991.98px) {
        .sidebar

    {
        height: auto;
    }

    }
</style>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 sidebar">
            <h5 class="mb-3">Admin Dashboard</h5>
            <nav>
                <a href="https://localhost:7140/Admin/Dashboard" class="nav-link">Dashboard</a>
                <a href="https://localhost:7140/Admin/Books" class="nav-link">Books</a>
                <a href="https://localhost:7140/Admin/Members" class="nav-link">Members</a>
                <a href="https://localhost:7140/Admin/BorrowRecords" class="nav-link">Borrow Records</a>
                <a href="https://localhost:7140/Admin/Reports" class="nav-link">Reports</a>
                <a href="https://localhost:7140/Admin/Settings" class="nav-link">Settings</a>
                <form asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm" class="d-inline">
                    <button type="submit" class="btn btn-link">Logout</button>
                </form>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="dashboard-header mb-4">
                <h2>Welcome, Admin!</h2>
                <p>Here's an overview of your library management system.</p>
            </div>

            <div class="row g-3">
                <div class="col-md-4">
                    <div class="dashboard-card text-center">
                        <h5>Total Books</h5>
                        <h2>320</h2>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="dashboard-card text-center">
                        <h5>Active Members</h5>
                        <h2>120</h2>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="dashboard-card text-center">
                        <h5>Issued Books</h5>
                        <h2>45</h2>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <div class="dashboard-card">
                    <h5>Pending Book Requests</h5>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Request ID</th>
                                <th>Member Name</th>
                                <th>Book Title</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>John Doe</td>
                                <td>Clean Code</td>
                                <td>Pending</td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>Jane Smith</td>
                                <td>ASP.NET Core</td>
                                <td>Approved</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
