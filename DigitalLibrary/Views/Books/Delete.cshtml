@model DigitalLibrary.Models.Book

@{
    ViewData["Title"] = "Delete Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2>Delete Book</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>Are you sure you want to delete this book?</h4>
                    </div>
                    
                    <dl class="row">
                        <dt class="col-sm-3">Title</dt>
                        <dd class="col-sm-9">@Model.Title</dd>

                        <dt class="col-sm-3">Author</dt>
                        <dd class="col-sm-9">@Model.Author</dd>

                        <dt class="col-sm-3">ISBN</dt>
                        <dd class="col-sm-9">@Model.ISBN</dd>

                        <dt class="col-sm-3">Publisher</dt>
                        <dd class="col-sm-9">@(Model.Publisher ?? "Not specified")</dd>

                        <dt class="col-sm-3">Category</dt>
                        <dd class="col-sm-9">@(Model.Category?.Name ?? "Not specified")</dd>

                        <dt class="col-sm-3">Total Copies</dt>
                        <dd class="col-sm-9">@Model.TotalCopies</dd>

                        <dt class="col-sm-3">Available Copies</dt>
                        <dd class="col-sm-9">@Model.AvailableCopies</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="BookID" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 