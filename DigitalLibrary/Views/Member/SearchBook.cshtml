@{
    ViewData["Title"] = "Search Book";
    var categories = ViewBag.Categories as dynamic[];
    var results = ViewBag.Results as dynamic[];
    bool isAuthenticated = User.Identity.IsAuthenticated;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
<div class="container py-4">
    <div class="mb-3">
        <a href="/Member/Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to Dashboard</a>
    </div>
    <h2 class="fw-bold mb-4"><i class="fas fa-search me-2"></i>Search Books</h2>
    <form asp-action="SearchBook" method="post" class="row g-3 mb-4">
        <div class="col-md-3">
            <input type="text" name="title" class="form-control" placeholder="Book Title" />
        </div>
        <div class="col-md-3">
            <input type="text" name="author" class="form-control" placeholder="Author Name" />
        </div>
        <div class="col-md-2">
            <input type="text" name="isbn" class="form-control" placeholder="ISBN" />
        </div>
        <div class="col-md-2">
            <select name="categoryId" class="form-select">
                <option value="">All Categories</option>
                @if (categories != null)
                {
                    foreach (var c in categories)
                    {
                        <option value="@c.CategoryID">@c.Name</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-1">
            <input type="number" name="year" class="form-control" placeholder="Year" min="1800" max="2100" />
        </div>
        <div class="col-md-1 d-flex align-items-center">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="available" value="true" id="availableCheck">
                <label class="form-check-label" for="availableCheck">Available</label>
            </div>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Search</button>
        </div>
    </form>
    <div class="row">
        <div class="col-12">
            @if (results != null && results.Length > 0)
            {
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Cover</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Category</th>
                            <th>ISBN</th>
                            <th>Published Year</th>
                            <th>Availability</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in results)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(book.CoverImage))
                                    {
                                        <img src="@book.CoverImage" alt="Cover" style="height:60px;width:auto;" />
                                    }
                                </td>
                                <td>@book.Title</td>
                                <td>@book.Author</td>
                                <td>@book.Category</td>
                                <td>@book.ISBN</td>
                                <td>@book.PublishedYear</td>
                                <td>
                                    <span class="badge @(book.Available ? "bg-success" : "bg-danger")">
                                        @(book.Available ? "Available" : "Out of Stock")
                                    </span>
                                </td>
                                <td>
                                    @if (isAuthenticated && book.Available)
                                    {
                                        <button class="btn btn-outline-primary btn-sm"><i class="fas fa-book-open"></i> Request to Borrow</button>
                                    }
                                    else if (!book.Available)
                                    {
                                        <button class="btn btn-outline-secondary btn-sm" disabled><i class="fas fa-ban"></i> Not Available</button>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">Login to request</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else if (results != null)
            {
                <div class="alert alert-warning text-center">No books found for your search criteria.</div>
            }
        </div>
    </div>
</div>
