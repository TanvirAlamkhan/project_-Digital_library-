<script src="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js"></script>
<script>
    mapboxgl.accessToken = 'pk.eyJ1IjoibWFwYm94dXNlciIsImEiOiJja3Z2b2J2b2IwM2JwMnBvN2F2b2J2b2JvIn0.2v1Qw1Qw1Qw1Qw1Qw1Qw1Q'; // Replace with your Mapbox token
    const libraries = [
        {
            name: 'Bangladesh National Library',
            area: 'Agargaon, Sher-E-Bangla Nagar',
            highlight: 'The largest public library in Bangladesh.',
            coords: [90.3745, 23.7785]
        },
        {
            name: 'Dhaka University Central Library',
            area: 'University of Dhaka, Nilkhet',
            highlight: 'Academic hub for students and researchers.',
            coords: [90.3995, 23.7337]
        },
        {
            name: 'Bangla Academy Library',
            area: 'Shahbagh',
            highlight: 'Promotes Bengali language and literature.',
            coords: [90.3952, 23.7382]
        },
        {
            name: 'British Council Library',
            area: 'Fuller Road, Dhaka',
            highlight: 'International resources and events.',
            coords: [90.3982, 23.7365]
        },
        {
            name: 'North South University Library',
            area: 'Bashundhara R/A',
            highlight: 'Modern academic library for NSU.',
            coords: [90.4251, 23.8151]
        },
        {
            name: 'BRAC University Library',
            area: 'Mohakhali',
            highlight: 'Resource-rich university library.',
            coords: [90.4125, 23.7806]
        },
        {
            name: 'Daffodil University Library',
            area: 'Dhanmondi / Ashulia',
            highlight: 'Innovative digital and print resources.',
            coords: [90.3667, 23.7465]
        },
        {
            name: 'Central Public Library',
            area: 'Shahbagh',
            highlight: 'Historic and central to Dhakaâ€™s readers.',
            coords: [90.3957, 23.7387]
        },
        {
            name: 'East West University Library',
            area: 'Aftabnagar',
            highlight: 'Academic support for EWU students.',
            coords: [90.4302, 23.7632]
        },
        {
            name: 'American Center Library',
            area: 'Baridhara',
            highlight: 'US resources and cultural programs.',
            coords: [90.4202, 23.8103]
        }
    ];
    let mapStyle = 'mapbox://styles/mapbox/light-v11';
    const map = new mapboxgl.Map({
        container: 'map3d',
        style: mapStyle,
        center: [90.3995, 23.76],
        zoom: 11.5,
        pitch: 50,
        bearing: -20,
        antialias: true
    });
    map.on('style.load', function () {
        map.addLayer({
            'id': '3d-buildings',
            'source': 'composite',
            'source-layer': 'building',
            'filter': ['==', 'extrude', 'true'],
            'type': 'fill-extrusion',
            'minzoom': 15,
            'paint': {
                'fill-extrusion-color': '#aaa',
                'fill-extrusion-height': ["get", "height"],
                'fill-extrusion-base': ["get", "min_height"],
                'fill-extrusion-opacity': 0.6
            }
        });
    });
    // Add library markers
    libraries.forEach((lib, idx) => {
        const el = document.createElement('div');
        el.className = 'marker-3d';
        el.style.width = '32px';
        el.style.height = '32px';
        el.style.background = 'linear-gradient(135deg,#6366f1,#8b5cf6)';
        el.style.borderRadius = '50%';
        el.style.boxShadow = '0 2px 8px rgba(99,102,241,0.2)';
        el.style.display = 'flex';
        el.style.alignItems = 'center';
        el.style.justifyContent = 'center';
        el.innerHTML = '<i class="fas fa-university text-white" style="font-size:18px;"></i>';
        new mapboxgl.Marker(el)
            .setLngLat(lib.coords)
            .setPopup(new mapboxgl.Popup({ offset: 25 })
                .setHTML(`<div style='min-width:200px'><b>${lib.name}</b><br/><span><i class='fas fa-map-marker-alt'></i> ${lib.area}</span><br/><span>${lib.highlight}</span></div>`))
            .addTo(map);
    });
    // Sidebar list
    const list = document.getElementById('libraryList');
    libraries.forEach((lib, idx) => {
        const item = document.createElement('a');
        item.className = 'list-group-item list-group-item-action';
        item.innerHTML = `<b>${lib.name}</b><br/><span class='text-muted'><i class='fas fa-map-marker-alt'></i> ${lib.area}</span>`;
        item.href = '#';
        item.onclick = function(e) {
            e.preventDefault();
            map.flyTo({ center: lib.coords, zoom: 15, pitch: 60, bearing: -20, essential: true });
            setTimeout(() => map.fire('click', { lngLat: { lng: lib.coords[0], lat: lib.coords[1] } }), 500);
        };
        list.appendChild(item);
    });
    // Map style toggle
    document.getElementById('toggleMapStyle').onclick = function() {
        mapStyle = mapStyle.includes('light') ? 'mapbox://styles/mapbox/dark-v11' : 'mapbox://styles/mapbox/light-v11';
        map.setStyle(mapStyle);
    };
</script>
