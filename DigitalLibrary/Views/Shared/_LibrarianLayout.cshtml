<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Digital Library</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DigitalLibrary.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="librarian-layout">
        <!-- Sidebar -->
        <aside class="librarian-sidebar">
            <div class="sidebar-header">
                <div class="brand-logo">
                    <i class="fas fa-book-open"></i>
                    <span class="brand-text">Digital<span class="brand-accent">Library</span></span>
                </div>
                <button class="sidebar-toggle" onclick="toggleSidebar()">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
            
            <nav class="sidebar-nav">
                <ul class="nav-list">
                    <li class="nav-item">
                        <a href="/Librarian/Dashboard" class="nav-link active">
                            <i class="fas fa-tachometer-alt"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Librarian/Inventory" class="nav-link">
                            <i class="fas fa-books"></i>
                            <span>Book Inventory</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Librarian/Requests" class="nav-link">
                            <i class="fas fa-clock"></i>
                            <span>Manage Requests</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Librarian/IssueReturn" class="nav-link">
                            <i class="fas fa-exchange-alt"></i>
                            <span>Issue & Return</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Librarian/Members" class="nav-link">
                            <i class="fas fa-users"></i>
                            <span>Member Management</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Librarian/Reports" class="nav-link">
                            <i class="fas fa-chart-bar"></i>
                            <span>Reports & Logs</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Librarian/Settings" class="nav-link">
                            <i class="fas fa-cog"></i>
                            <span>Settings</span>
                        </a>
                    </li>
                </ul>
            </nav>
            
            <div class="sidebar-footer">
                <div class="user-info">
                    <img src="https://via.placeholder.com/40" alt="Librarian" class="user-avatar">
                    <div class="user-details">
                        <h6>Sarah Johnson</h6>
                        <span>Senior Librarian</span>
                    </div>
                </div>
                <div class="user-actions">
                    <a href="/Account/Profile" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-user"></i>
                    </a>
                    <a href="/Account/Logout" class="btn btn-outline-danger btn-sm">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="librarian-main">
            <!-- Top Navigation -->
            <header class="top-nav">
                <div class="nav-left">
                    <button class="sidebar-toggle-mobile" onclick="toggleSidebar()">
                        <i class="fas fa-bars"></i>
                    </button>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/Librarian/Dashboard">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                        </ol>
                    </nav>
                </div>
                <div class="nav-right">
                    <div class="nav-actions">
                        <button class="btn btn-outline-primary btn-sm" onclick="toggleNotifications()">
                            <i class="fas fa-bell"></i>
                            <span class="notification-badge">3</span>
                        </button>
                        <button class="btn btn-outline-secondary btn-sm" onclick="toggleDarkMode()">
                            <i class="fas fa-moon"></i>
                        </button>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <div class="page-content">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- Toast Container -->
    <div class="toast-container"></div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Sidebar functionality
        function toggleSidebar() {
            const layout = document.querySelector('.librarian-layout');
            layout.classList.toggle('sidebar-collapsed');
        }

        // Dark mode toggle
        function toggleDarkMode() {
            const body = document.body;
            const currentTheme = body.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            
            body.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            
            const btn = event.target.closest('button');
            const icon = btn.querySelector('i');
            
            if (newTheme === 'dark') {
                icon.className = 'fas fa-sun';
            } else {
                icon.className = 'fas fa-moon';
            }
        }

        // Notifications toggle
        function toggleNotifications() {
            // Toggle notifications panel
            console.log('Toggle notifications');
        }

        // Initialize layout
        document.addEventListener('DOMContentLoaded', function() {
            // Load saved theme
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme) {
                document.body.setAttribute('data-theme', savedTheme);
                
                const btn = document.querySelector('[onclick="toggleDarkMode()"]');
                const icon = btn.querySelector('i');
                
                if (savedTheme === 'dark') {
                    icon.className = 'fas fa-sun';
                }
            }

            // Auto-hide sidebar on mobile
            if (window.innerWidth < 768) {
                document.querySelector('.librarian-layout').classList.add('sidebar-collapsed');
            }
        });

        // Handle window resize
        window.addEventListener('resize', function() {
            if (window.innerWidth < 768) {
                document.querySelector('.librarian-layout').classList.add('sidebar-collapsed');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 