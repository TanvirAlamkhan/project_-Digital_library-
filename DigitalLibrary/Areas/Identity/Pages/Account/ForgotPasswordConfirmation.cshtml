@page
@model DigitalLibrary.Areas.Identity.Pages.Account.ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="identity-page">
    <div class="identity-container">
        <div class="identity-header">
            <div class="identity-logo">
                <i class="fas fa-book-open"></i>
                <span class="identity-title">Digital Library</span>
            </div>
            <h1 class="identity-title">Check Your Email</h1>
            <p class="identity-subtitle">We've sent you a password reset link</p>
        </div>

        <div class="identity-form">
            <div class="text-center">
                <i class="fas fa-envelope-open-text" style="font-size: 3rem; color: #6366f1; margin-bottom: 1rem;"></i>
                <p class="identity-subtitle">
                    Please check your email and click the link to reset your password.
                </p>
                <p class="identity-subtitle">
                    If you don't see the email, check your spam folder.
                </p>
            </div>
            
            <div class="identity-links">
                <p>
                    <a asp-page="./Login">Back to login</a>
                </p>
                <p>
                    <a asp-page="./Register">Create new account</a>
                </p>
            </div>
        </div>
    </div>
</div> 