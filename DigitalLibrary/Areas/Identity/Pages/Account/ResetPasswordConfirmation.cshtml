@page
@model DigitalLibrary.Areas.Identity.Pages.Account.ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
}

<div class="identity-page">
    <div class="identity-container">
        <div class="identity-header">
            <div class="identity-logo">
                <i class="fas fa-book-open"></i>
                <span class="identity-title">Digital Library</span>
            </div>
            <h1 class="identity-title">Password Reset Complete</h1>
            <p class="identity-subtitle">Your password has been successfully reset</p>
        </div>

        <div class="identity-form">
            <div class="text-center">
                <i class="fas fa-check-circle" style="font-size: 3rem; color: #059669; margin-bottom: 1rem;"></i>
                <p class="identity-subtitle">
                    Your password has been reset successfully.
                </p>
                <p class="identity-subtitle">
                    You can now sign in with your new password.
                </p>
            </div>
            
            <div class="identity-links">
                <p>
                    <a asp-page="./Login">Sign in to your account</a>
                </p>
            </div>
        </div>
    </div>
</div> 